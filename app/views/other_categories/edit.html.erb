<div class="mx-3 mt-4 mb-3 p-4 rounded-lg bg-white-80 border-green1">

  <div class="mb-4 d-flex align-items-center">
    <h5 class="m-0 mr-auto text-green2">その他編集</h5>
    <%= link_to "一覧画面へ", categories_path, class:"btn btn-sm btn-success btn-width" %>
  </div>

  <%= form_for @other_category, html: { class: "text-green2" } do |f| %>

    <%= render partial: 'layouts/error_messages', locals: { model: f.object } %>

    <div class="form-row">
      <div class="form-group col-md">
        <%= f.label :category_id, class: "col-form-label col-form-label-sm" %>
        <select required class="form-control form-control-sm" id="select-category" name="other_category[category_id]">
          <%= @categories.each do |category| %>
            <option <%= "selected" if category.id == @other_category.category.id %> value=<%= category.id %>><%= category.name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group col-md">
        <label class="col-form-label col-form-label-sm"><%= SubCategory.human_attribute_name(:name) %></label>
        <input type="text" disabled class="form-control form-control-sm" value="その他">
      </div>
      <div class="form-group col-md">
        <%= f.label :name, class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :name, required: true, class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="text-right">
      <%= link_to "削除", other_category_path(@other_category.id), method: :delete, class: "btn btn-sm btn-danger btn-width" %>
      <%= f.submit "更新", class: "btn btn-sm btn-success btn-width" %>
    </div>

  <% end %>

</div>
