<div class="mx-3 mt-4 mb-3 p-4 rounded-lg bg-white-80 border-green1 content-box">

  <div class="mb-4 d-flex align-items-center">
    <h5 class="m-0 mr-auto text-green2">部門一覧</h5>
    <%= link_to new_group_path, class:"mr-1 btn btn-sm btn-success btn-width" do %>
      <%= icon "fas", "plus" %>
      新規登録
    <% end %>
  </div>

  <table class="table table-striped table-sm text-green2">
    <thead>
      <th scope="col"><%= Group.human_attribute_name(:code) %></th>
      <th scope="col"><%= Group.human_attribute_name(:name) %></th>
      <th scope="col"></th>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.code %></td>
          <td><%= group.name %></td>
          <td class="text-right"><%= link_to "編集", edit_group_path(group.id), class: "btn btn-sm btn-outline-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
