<div class="mx-3 mt-4 mb-3 p-4 rounded-lg bg-white-80 border-green1">

  <div class="mb-4 d-flex align-items-center">
    <h5 class="m-0 mr-auto text-green2">部門詳細</h5>
    <% if app_admin?(current_user) %>
      <%= link_to "一覧画面へ", groups_path, class:"btn btn-sm btn-success btn-width" %>
    <% end %>
  </div>

  <%= form_for @group, html: { class: "text-green2" } do |f| %>

    <%= render partial: 'layouts/error_messages', locals: { model: f.object } %>

    <div class="form-row">
      <div class="form-group col-md-4">
        <%= f.label :code, class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :code, class: "form-control form-control-sm", disabled: @disabled %>
      </div>
      <div class="form-group col-md-8">
        <%= f.label :name, class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :name, class: "form-control form-control-sm", disabled: @disabled %>
      </div>
    </div>

    <% unless @disabled %>
      <div class="text-right">
        <%= link_to "削除", group_path(@group.id), method: :delete, class: "btn btn-sm btn-danger btn-width" %>
        <%= f.submit "更新", class: "btn btn-sm btn-success btn-width" %>
      </div>
    <% end %>

  <% end %>

</div>
