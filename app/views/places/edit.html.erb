<div class="mx-3 mt-4 mb-3 p-4 rounded-lg bg-white-80 border-green1">

  <div class="mb-4 d-flex align-items-center">
    <h5 class="m-0 mr-auto text-green2">保管場所編集</h5>
    <%= link_to "一覧画面へ", places_path, class:"btn btn-sm btn-success btn-width" %>
  </div>

  <%= form_for @place_master, url: { action: :update }, html: { class: "text-green2" } do |f| %>

    <%= render partial: 'layouts/error_messages', locals: { model: f.object } %>

    <div class="form-row">
      <div class="form-group col-md">
        <%= f.label :building, class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :building, required: true, class: "form-control form-control-sm" %>
      </div>
      <div class="form-group col-md">
        <%= f.label :room_num, class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :room_num, required: true, class: "form-control form-control-sm" %>
      </div>
      <div class="form-group col-md">
        <%= f.label :name, class: "col-form-label col-form-label-sm" %>
        <%= f.text_field :name, required: true, class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="text-right">
      <%= link_to "削除", place_path(id: @place_master.place.id), method: :delete, class: "btn btn-sm btn-danger btn-width" %>
      <%= f.submit "更新", class: "btn btn-sm btn-success btn-width" %>
    </div>

  <% end %>

</div>
